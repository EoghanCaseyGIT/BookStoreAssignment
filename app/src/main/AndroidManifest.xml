<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apple.BookStore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AccountActivity.UserApplication.UserAccount">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AccountActivity.Login" />
        <activity android:name=".AccountActivity.RegisterActivity" />
        <activity android:name=".AccountActivity.ResetPasswordActivity" />
        <activity android:name=".AccountActivity.MainActivity" />
        <activity android:name=".AccountActivity.AdminApplication.AdminFeed" />
        <activity android:name=".AccountActivity.AdminApplication.BookUpload" />
        <activity android:name=".AccountActivity.AdminApplication.SearchUser" />
        <activity android:name=".AccountActivity.AdminApplication.UpdateBook" />
        <activity android:name=".AccountActivity.UserApplication.UserDetails" />


    </application>

</manifest>